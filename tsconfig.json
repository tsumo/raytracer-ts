{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es7", "dom"],
    "module": "es6",
    "declaration": true,
    "outDir": "./build",
    "strict": true
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
